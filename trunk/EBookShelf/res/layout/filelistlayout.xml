<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/background"
	>
	<ImageButton android:id="@+id/qry_button"
		android:layout_width="46dip" 
		android:layout_height="46dip"
		android:layout_alignParentRight="true" 
		android:layout_marginLeft="0dip"
		android:src="@drawable/query" />
	<EditText
	     android:id="@+id/path_edit" 
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		 android:layout_toLeftOf="@id/qry_button"
		android:layout_alignTop="@id/qry_button" 
		android:padding="2px"
		android:textSize="20sp" 
		android:textColor="@drawable/blue"
		android:drawablePadding="1dip" 
		android:drawableLeft="@drawable/path">
	</EditText>

	<ListView android:id="@android:id/list" 
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		 android:layout_below="@id/path_edit"
		 android:scrollingCache="@drawable/background"
		android:longClickable="true">
	</ListView>
</RelativeLayout>